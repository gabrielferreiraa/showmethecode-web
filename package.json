    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "react-tooltip": "^3.11.1",
    "redux": "^4.0.5",
    "redux-actions": "^2.6.5",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "socket.io-client": "^2.3.0",
    "styled-components": "^4.4.1",
    "styled-icons": "^9.1.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^6.11.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
