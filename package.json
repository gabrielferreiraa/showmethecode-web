{
  "name": "showmethecode-web",
  "version": "0.1.0",
  "private": true,
  "description": "A amazing real time code sharer to you and your friends. So, give me the room code and SHOW ME THE CODE!",
  "dependencies": {
    "axios": "0.19.2",
    "connected-react-router": "6.6.1",
    "docz": "2.3.0-alpha.6",
    "dotenv": "8.2.0",
    "firebase": "7.8.0",
    "history": "4.10.1",
    "polished": "3.4.4",
    "prettier": "1.19.1",
    "prop-types": "15.7.2",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-grid-system": "6.1.0",
    "react-redux": "7.1.3",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.3.0",
    "react-tooltip": "3.11.2",
    "redux": "4.0.5",
    "redux-actions": "2.6.5",
    "redux-persist": "6.0.0",
    "redux-saga": "1.1.3",
    "reselect": "4.0.0",
    "socket.io-client": "2.3.0",
    "styled-components": "5.0.0",
    "styled-icons": "9.2.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx-self": "^7.8.3",
    "@babel/plugin-transform-react-jsx-source": "^7.8.3",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@testing-library/dom": "6.12.0",
    "@testing-library/jest-dom": "5.1.1",
    "@testing-library/react": "9.4.0",
    "axios-mock-adapter": "1.17.0",
    "chai": "4.2.0",
    "commitizen": "4.0.3",
    "coveralls": "3.0.9",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-sonarjs": "0.5.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "redux-mock-store": "1.5.4",
    "redux-saga-test-plan": "4.0.0-rc.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:cov": "yarn test --coverage",
    "eject": "react-scripts eject",
    "docz": "docz dev -p 4000",
    "coveralls": "yarn test --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
